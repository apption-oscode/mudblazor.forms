<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageId>Ae.MudBlazor.Forms</PackageId>
		<VersionPrefix>1.0.0</VersionPrefix>
		<Nullable>enable</Nullable>
		<LangVersion>preview</LangVersion>
		<Authors>Apption</Authors>
		<Company>Apption</Company>
		<Product>MudBlazor Model Form</Product>
		<Description>MudBlazor.Forms is a library built on top of MudBlazor for creating responsive, dynamic, and highly customizable forms in Blazor applications. Simplifies form handling, validation, and binding, offering a clean and efficient way to work with structured data inputs in Blazor.</Description>
		<Copyright>Copyright Apption 2024</Copyright>
		<PackageProjectUrl>https://github.com/apption-oscode/elemental-blazor</PackageProjectUrl>
		<RepositoryUrl>https://github.com/apption-oscode/elemental-blazor</RepositoryUrl>
		<PackageTags>c# blazor</PackageTags>
		<RepositoryType>Git</RepositoryType>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageIcon>Elemental_128x128.png</PackageIcon>
		<PackageIconFullPath>$(MSBuildThisFileDirectory)Elemental_128x128.png</PackageIconFullPath>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<Title>AElemental Model Form for MudBlazor</Title>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\README.md" Link="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="MudBlazor" Version="7.13.*" />
    <PackageReference Include="FluentValidation" Version="10.4.0" />

  </ItemGroup>

  <ItemGroup>
    <None Update="Elemental_128x128.png">
      <PackagePath>\</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>

</Project>
