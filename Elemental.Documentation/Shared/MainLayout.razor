@inherits LayoutComponentBase
@using Elemental.Code
@using Elemental.Components

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <img src="/_content/MudForms.Documentation/img/Elemental_128x128.png" style="max-height: 50px; padding-right:4px;" />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Mud.ModelForm</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
            <MudNavMenu>
        @foreach (var l in _navLinks)
        {
                <MudNavLink Href="@l.To">@l.Label</MudNavLink>
        }
            </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    

    private List<AeNavLink> _navLinks = new List<AeNavLink>
    {
        new AeNavLink{ Label = "Home", To = "/", IconName = "function", IconStyle = RXIcon.RXStyle.Fill, Color = "blue" },
        new AeNavLink{ Label = "Basic Form", To = "/modelforms/basicform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Top Labels", To = "/modelforms/toplabelsform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Custom Labels", To = "/modelforms/customlabelsform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Form With Categories", To = "/modelforms/formwithcategories", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Form With Outline", To = "/modelforms/formwithoutline", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Interactive Form", To = "/modelforms/interactiveform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Flex Form", To = "/modelforms/flexform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Flex Form with Categories", To = "/modelforms/flexformwithcategory", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Interactive Dropdowns", To = "/modelforms/interactivedropdowns", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
        new AeNavLink{ Label = "Custom Validation", To = "/modelforms/customvalidationform", IconName = "focus", IconStyle = RXIcon.RXStyle.Fill, Color = "green" },
    };

}