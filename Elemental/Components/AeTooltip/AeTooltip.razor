@namespace Elemental.Components
@inherits HtmlElement

<div class="@_classname">
    <span class="hover-text">@Text</span>
    @ChildContent
</div>

@code {
  [Parameter] public string Text { get; set; }

  private string _classname => $"ae tooltip {_inputClass}";
}