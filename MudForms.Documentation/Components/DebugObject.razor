<MudStack Class="my-16">
    <MudText Typo="Typo.h5">
        <b>Debug View</b>
    </MudText>
    <MudTable Items="@Object.GetType().GetProperties().ToList()" FixedHeader="true">
        <HeaderContent>
            <MudTh>Property</MudTh>
            <MudTh>Value</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Property">@context.Name</MudTd>
            <MudTd DataLabel="Value">@Convert.ToString(context.GetValue(Object, null) ?? "(null)")</MudTd>
        </RowTemplate>
    </MudTable>
</MudStack>

@code {
    [Parameter]
    public object Object { get; set; }
}